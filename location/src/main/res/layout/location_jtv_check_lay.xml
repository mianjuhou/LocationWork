<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/basic_jtv_common_header" />

    <com.jtv.base.ui.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_line1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_half_corner_text"
                    android:gravity="center"
                    android:text="线路"
                    android:textColor="@color/list_itemtext_tipscolor"
                    android:textSize="20sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_line2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_stategray_white_text"
                    android:gravity="center"
                    android:text="道岔"
                    android:textColor="@color/list_itemtext_tipscolor"
                    android:textSize="20sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_line3"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_stategray_white_text"
                    android:gravity="center"
                    android:text="股道"
                    android:textColor="@color/list_itemtext_tipscolor"
                    android:textSize="20sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="35dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_line4"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_half_corner_text_right"
                    android:gravity="center"
                    android:text="专用线"
                    android:textColor="@color/list_itemtext_tipscolor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_linename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <com.plutus.libraryui.spinner.NiceSpinner
                            android:id="@+id/ns_linename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_linetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="行:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <com.plutus.libraryui.spinner.NiceSpinner
                            android:id="@+id/ns_linetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ll_dcname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="道岔名称:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <com.plutus.libraryui.spinner.NiceSpinner
                            android:id="@+id/ns_dc_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺位:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <com.plutus.libraryui.spinner.NiceSpinner
                            android:id="@+id/ns_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    -->

                    <LinearLayout
                        android:id="@+id/ll_cha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="道岔部分:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <com.plutus.libraryui.spinner.NiceSpinner
                            android:id="@+id/ns_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/split_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_lc">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="里程:"
                        android:textColor="@color/list_itemtext_tipscolor"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/tv_linedistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:lines="1"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:background="#22000000"
                            android:gravity="center"
                            android:text="+" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="1dp"
                            android:background="@android:color/white" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:background="#22000000"
                            android:gravity="center"
                            android:text="-" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="公里"
                        android:textColor="@color/list_itemtext_tipscolor"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/tv_linemile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="0123456789."
                        android:inputType="number"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="米"
                        android:textColor="@color/list_itemtext_tipscolor"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn_getdistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="获取" />
                </LinearLayout>

                <View
                    android:id="@+id/line_lc"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="铁号:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:minHeight="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺位:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:minHeight="40dp" />

                        <com.plutus.libraryui.spinner.NiceSpinner
                            android:id="@+id/ns_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="值:"
                            android:textColor="@color/list_itemtext_tipscolor"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/et_measure"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789."
                            android:inputType="number"
                            android:minHeight="40dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="问题类型"
                        android:textColor="@color/list_itemtext_tipscolor"
                        android:textSize="20sp" />

                    <com.plutus.libraryui.spinner.NiceSpinner
                        android:id="@+id/ns_questiontype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="问        题"
                        android:textColor="@color/list_itemtext_tipscolor"
                        android:textSize="20sp" />

                    <com.plutus.libraryui.spinner.NiceSpinner
                        android:id="@+id/ns_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="问      题："
                        android:textColor="@color/list_itemtext_tipscolor"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <include layout="@layout/jtv_location_sound_text" />

                <ImageView
                    android:id="@+id/iv_say"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" >

                    <ImageView
                        android:id="@+id/btn_play"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dip"
                        android:layout_toRightOf="@+id/img_recorder"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                    <ImageButton
                        android:id="@+id/img_recorder"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/selector_record_sound"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_recorder"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/ibn_takephoto"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dip"
                            android:background="@drawable/selector_pressblue_upgray_camera" 
                            android:layout_gravity="center_horizontal"/>

                        <Button
                            android:id="@+id/btn_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="相册"
                            android:textColor="@color/black"
                            android:textSize="20sp" 
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"/>

                        <Button
                            android:id="@+id/btn_editor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="查看"
                            android:textColor="@color/black"
                            android:textSize="20sp" 
                            android:visibility="gone"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.jtv.base.ui.ReboundScrollView>

</LinearLayout>